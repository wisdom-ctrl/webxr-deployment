<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Marker-Based AR with Camera-Following Object</title>

    <!-- A-Frame -->
    <script src="https://aframe.io/releases/1.5.0/aframe.min.js"></script>
    <!-- AR.js -->
    <script src="https://cdn.jsdelivr.net/gh/AR-js-org/AR.js/aframe/build/aframe-ar.js"></script>

    <script>
      // Interactive component
      AFRAME.registerComponent('tap-interactive', {
        init: function () {
          this.el.addEventListener('click', () => {
            // Change color randomly
            const colors = ['red','green','yellow','purple','orange'];
            const randomColor = colors[Math.floor(Math.random() * colors.length)];
            this.el.setAttribute('material', 'color', randomColor);

            // Make it spin faster
            this.el.setAttribute('animation', {
              property: 'rotation',
              to: '0 360 0',
              loop: true,
              dur: 1000
            });
          });
        }
      });
    </script>
  </head>

  <body style="margin:0; overflow:hidden;">
    <a-scene embedded arjs="sourceType: webcam; debugUIEnabled: false;" cursor="rayOrigin: mouse">

      <!-- Marker -->
      <a-marker preset="hiro">

        <!-- Object attached to marker (follows it) -->
        <a-box
          position="0 0.5 0"
          scale="0.5 0.5 0.5"
          color="blue"
          animation="property: rotation; to: 0 360 0; loop: true; dur: 3000"
          tap-interactive>
        </a-box>

      </a-marker>

      <!-- Camera -->
      <a-entity camera></a-entity>

    </a-scene>
  </body>
</html>
